{{!
    @template paygw_mollie/mollie_select_method

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}
<div class="mollie-redirect-notification alert alert-info"><span>{{#str}}redirect-notify, paygw_mollie{{/str}}</span></div>
<div class="paygw_mollie-payment-methods">
{{#methods}}
    <div class="paymentmethod" data-method-has-banks="{{hasbanks}}">
        <input type="radio" id="method_{{id}}" name="method" value="{{id}}" data-mollie-method="{{id}}"/>
        <label for="method_{{id}}">
            <img src="{{#images.svg}}{{.}}{{/images.svg}}{{^images.svg}}{{#images.size2x}}{{.}}{{/images.size2x}}{{/images.svg}}" alt=""/> {{description}}
        </label>
    </div>
{{/methods}}
</div>
